<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:padding="20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView

            android:id="@+id/parent_scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_shape"
            android:focusableInTouchMode="true"
            android:padding="17dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:padding="8dp"
                    android:text="रेजिस्ट्रेशन करण्यासाठी माहिती भरा \n Enter  Details for Registration "
                    android:textAlignment="center"
                    android:textColor="#F2444343"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:padding="8dp"
                    android:textColorHint="#706D6D"
                    android:textSize="12sp"
                    android:text="नाव / Name :">

                </TextView>


                <EditText

                    android:id="@+id/edt_agency_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/border"

                    android:padding="8dp"
                    android:textColorHint="#AFABAB"
                    android:textSize="12sp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:padding="8dp"
                    android:textColorHint="#706D6D"
                    android:textSize="12sp"
                    android:text="पत्ता / Address">

                </TextView>


                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:textColorHint="#AFABAB"
                    android:textSize="12sp"
                    android:lines="4"


                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:padding="8dp"
                    android:textColorHint="#706D6D"
                    android:textSize="12sp"
                    android:text="पासवर्ड / Password">

                </TextView>


                <EditText
                    android:id="@+id/edt_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/border"

                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColorHint="#AFABAB"
                    android:textSize="12sp"


                    />



                <TextView
                    android:id="@+id/txt_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="8dp"
                    android:text="Forgot Password ?"
                    android:textAlignment="center"
                    android:textColor="#696969"
                    android:textSize="12sp" />

                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button

                        android:id="@+id/btn_Login"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_bg"
                        android:padding="0dp"
                        android:text="Login"
                        android:textColor="#fff"
                        android:textSize="12sp"

                        />
                    <Button

                        android:id="@+id/btn_checkin"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_bg"
                        android:padding="0dp"
                        android:text="Registration"
                        android:textColor="#fff"
                        android:textSize="12sp"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></TextView>


            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/logBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>

